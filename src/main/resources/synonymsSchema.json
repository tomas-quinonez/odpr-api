{
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "Product",
    "description": "A product from Acme's catalog",
    "type": "object",
    "patternProperties": {
      "^[a-zA-Z]*$": {
        "anyOf": [
          {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        ]
      }
    },
    "additionalProperties": false
  }